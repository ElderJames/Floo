@page "/question/new"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<div class="Content-editor">
    <Form Model="_question" OnFinish="CreateOrUpdateContent">
        <FormItem>
            <Input @bind-Value="context.Title" Size="large" Placeholder="标题" />
        </FormItem>
        <FormItem>
            <Vditor.Editor @bind-Value="context.Summary" Width="100%" MinHeight="500" />
        </FormItem>
        <FormItem WrapperCol="new ColLayoutParam{ Offset = 20, Span = 4 }">
            <Button Type="@ButtonType.Primary" HtmlType="submit">
                发布问题
            </Button>
        </FormItem>
    </Form>
</div>