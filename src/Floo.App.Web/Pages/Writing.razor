@page "/write"
@page "/{UserName}/{ContentSlug}/edit"

<div class="Content-editor">
    <Form Model="_content" OnFinish="CreateOrUpdateContent">
        <FormItem>
            <Input @bind-Value="context.Article.Title" Size="large" Placeholder="标题" />
        </FormItem>
        <FormItem>
            <Vditor.Editor @bind-Value="context.Text" Width="100%" MinHeight="500" />
        </FormItem>
        <FormItem WrapperCol="new ColLayoutParam{ Offset = 20, Span = 4 }">
            <Button Type="@ButtonType.Primary" HtmlType="submit">
                提交
            </Button>
        </FormItem>
    </Form>
</div>