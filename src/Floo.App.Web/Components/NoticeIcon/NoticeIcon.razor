@namespace Floo.App.Web.Components
@inherits AntDomComponentBase

<Dropdown Placement="@PlacementType.BottomRight"
          OverlayClassName="dropdown-container popover"
          Trigger="_trigger"
          Visible="Visible"
          PopupContainerSelector=".header-nav"
          OnVisibleChange="SetVisible"
          OverlayEnterCls="@(" ")">
    <Overlay>
        <Tabs Class="tabs">
            <CascadingValue Value="this">
                @ChildContent
            </CascadingValue>
        </Tabs>
    </Overlay>
    <ChildContent>
        <span class="@ClassMapper.Class">
            <Badge Count="Count" Style="box-shadow: none;" Class="badge">
                <Icon Type="bell" Theme="outline" />
            </Badge>
        </span>
    </ChildContent>
</Dropdown>
